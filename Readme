def solution(s):
    b = ''
    c = 0
    e = []
    if len(s) == 0:
        return []
    elif len(s) % 2 == 0:
        for i in s:
            c += 1
            b = b + i
            if len(b) == 2:
                s = s[c:]
                b = b.split()
                e = e + b
                c = 0
                b = ''
    elif len(s) % 2 != 0:
        s = s + '_'
        for i in s:
            c += 1
            b = b + i
            if len(b) == 2:
                s = s[c:]
                b = b.split()
                e = e + b
                c = 0
                b = ''
    return e
        
test.describe("Example Tests")

tests = (
    ("asdfadsf", ['as', 'df', 'ad', 'sf']),
    ("asdfads", ['as', 'df', 'ad', 's_']),
    ("", []),
    ("x", ["x_"]),
)

for inp, exp in tests:
    test.assert_equals(solution(inp), exp)
